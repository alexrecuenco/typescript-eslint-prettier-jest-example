// This allows linting all files, including those that are excluded from our typescript compilation
{
    "extends": "./tsconfig.json",
    "references": [],
    "compilerOptions": {
        "outDir": "./build-eslint",
        "types": ["node"],
        "allowJs": true,
        "checkJs": false,
    },
    "include": ["*.config.*"],
    // Exclude everything that isn't in the root folder
    "exclude": ["node_modules"],
}
