{
    "name": "backend",
    "private": true,
    "version": "1.0.0",
    "main": "dist/src/index.js",
    "type": "module",
    "bin": {
        "myexecsql": "./dist/src/scripts/execsql.js"
    },
    "scripts": {
        "test": "jest",
        "dev": "nodemon src/index.ts serve",
        "db:prepare": "npm run build && npm exec myexecsql ./db/prepare.sql",
        "start": "npm run build && node . serve",
        "build": "npm run build:prod",
        "build:debug": "npm run build:debug:node && npm run build:debug:test",
        "build:debug:node": "tsc --build ./tsconfig.node.json && tsc-alias -p tsconfig.node.json",
        "build:debug:test": "tsc --build ./tsconfig.test.json",
        "build:prod": "tsc --build ./tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
        "clean": "tsc --build --clean && tsc --build tsconfig.prod.json --clean && tsc --build tsconfig.node.json --clean && tsc --build tsconfig.test.json --clean"
    },
    "author": "Alex Recuenco",
    "license": "MIT",
    "description": "",
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^5.0.1",
        "interface": "^1.0.0",
        "pg": "^8.13.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.13",
        "@types/node": "^22.7.5",
        "@types/pg": "^8.11.10",
        "@types/supertest": "^6.0.2",
        "fast-check": "^3.22.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.7",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsc-watch": "^6.2.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.3"
    }
}
