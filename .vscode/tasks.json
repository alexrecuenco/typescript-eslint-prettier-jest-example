{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "isBackground": true,
            "dependsOn": [
                "npm: dev - packages/frontend",
                "npm: dev - packages/backend",
            ],
        },
        {
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "path": "packages/frontend",
            // See here https://stackoverflow.com/a/72655542/7346915
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "source": "Typescript",
                    "fileLocation": "absolute",
                    "applyTo": "allDocuments",
                    "background": {
                        "activeOnStart": true,
                        // "beginsPattern": "sd",
                        // "endsPattern": " > "
                    },
                    "pattern": [
                        {
                            "regexp": "(ERROR|WARNING)\\(TypeScript\\)  (.*)",
                            "severity": 1,
                            "message": 2,
                        },
                        {
                            "regexp": "^ FILE  (.*):(\\d*):(\\d*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                        },
                    ],
                },
            ],
            "label": "npm: dev - packages/frontend",
            "detail": "vite",
        },
        {
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "path": "packages/backend",
            "problemMatcher": ["$tsc-watch"],
            "label": "npm: dev - packages/backend",
            "detail": "tsc-watch --onSuccess 'node .'",
        },
    ],
}
