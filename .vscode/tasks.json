{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "isBackground": true,
            "dependsOn": [
                "npm: dev - packages/frontend",
                "npm: dev - packages/backend",
                "npm: dev - packages/interface",
            ],
            "problemMatcher": [],
        },
        {
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "path": "packages/frontend",
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "source": "Typescript",
                    "fileLocation": "absolute",
                    "applyTo": "allDocuments",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "ready",
                        "endsPattern": "ready",
                    },
                    "pattern": [
                        {
                            "regexp": "(ERROR|WARNING)\\(TypeScript\\)  (.*)",
                            "severity": 1,
                            "message": 2,
                        },
                        {
                            "regexp": "^ FILE  (.*):(\\d*):(\\d*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                        },
                    ],
                },
            ],
            "label": "npm: dev - packages/frontend",
            "detail": "vite",
        },
        {
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "dependsOn": ["compose: database"],
            "path": "packages/backend",
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "source": "ts",
                    "applyTo": "allDocuments",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*starting.*",
                        "endsPattern": ".*running.*",
                    },
                },
            ],
            "label": "npm: dev - packages/backend",
        },
        {
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "path": "packages/interface",
            "problemMatcher": ["$tsc-watch"],
            "label": "npm: dev - packages/interface",
        },
        {
            "type": "shell",
            "command": "docker",
            "args": [
                "compose",
                "-f",
                "compose.yaml",
                "-f",
                "compose.debug.yaml",
                "up",
                "db",
                "-d",
            ],
            "isBackground": false,
            "problemMatcher": [],
            "label": "compose: database",
        },
    ],
}
